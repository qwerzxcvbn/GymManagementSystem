<Window x:Class="GymManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="30" HorizontalAlignment="Center" Margin="0 20 0 20"></TextBlock>
            <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <TextBox Name="Login" Margin="0 0 0 20"></TextBox>

            <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <PasswordBox Name="Pass" Margin="0 0 0 50"></PasswordBox>
            <Button Height="25" Content="Войти" FontSize="15" Name="vxod" Click="vxod_Click"></Button>
            
            
        </StackPanel>
    </Grid>
</Window>
