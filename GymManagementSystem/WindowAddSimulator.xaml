<Window x:Class="GymManagementSystem.WindowAddSimulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymManagementSystem"
        mc:Ignorable="d"
        Title="WindowAddSimulator" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Добавление тренажера" FontSize="25" HorizontalAlignment="Center" Margin="0 0 0 20"></TextBlock>
            <TextBlock Text="Название" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <TextBox Name="nameSimul" Margin="0 0 0 20"></TextBox>

            <TextBlock Text="Описание" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <TextBox Name="description" Margin="0 0 0 20"></TextBox>

            <TextBlock Text="Доступность" FontSize="20" HorizontalAlignment="Left"></TextBlock>
            <TextBox Name="availability" Margin="0 0 0 50"></TextBox>

            <Button Height="25" Content="Добавить" FontSize="15" Name="Add" Click="Add_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
